<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="InformeTq Região Companhy" />
    <meta name="keywords" content="ITQ Região " />
    <meta name="author" content="Alan Devincola, Julia Gonçalves " />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>@ViewData["Title"]</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand" style="background-color: #dc3545">
            <div class="container-fluid">

                <a class="navbar-brand" href="/Home/Index">
                    <img src="/imgs/logonova.png" style="width:170px;" alt="Logo do site" />
                </a>

                <div class="flex-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Home/Index" target="_blank" style="color:white; font-weight:bold;">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/Login/Entrar" target="_blank" style="color:white; font-weight:bold;">Login/Cadastro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/Cidades/Index" target="_blank" style="color:white; font-weight:bold;">Cidades</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/Problema/Index" target="_blank" style="color:white; font-weight:bold;">Informe um problema</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#" target="_blank" style="color:white; font-weight:bold;">Sair</a>
                        </li>

                    </ul>
                </div>

            </div>
        </nav>
    </header>
    
    <br />
    <br />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
  

    <footer>
        <div id="contact area">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <br><br>
                        <h4 class="main-title">
                            Entre em contato Conosco através de nossos meios de comunicação
                        </h4>
                    </div>
                    <div class="col-md-4 contact-box">
                        <i class="fas fa-phone"></i>
                        <p><span class="contact-title">Ligue para: </span> (16) 99606-9834</p>
                        <p><span class="contact-title">Horários: </span> Segunda a sexta-feira: 08:00 - 19:00,
                        </p><p>Sabado e Domingo: FECHADO</p>
                    </div>
                    <div class="col-md-4 contact-box">
                        <i class="fas fa-envelope"></i>
                        <p><span class="contact-title">Envie um email: </span> informetqeregiao@gmail.com</p>
                    </div>
                    <div class="col-md-4 contact-box">
                        <i class="fas fa-marker-alt"></i>
                        <p><span class="contact-title">Ou venha até o nosso escritório: </span> Rua Domingos de Oliveira N° 164 Centro- Taquaritinga-SP </p>
                    </div>
                    <div class="col-md-6" id="msg-box">
                        <p>Ou nos deixe uma mensagem</p>
                        <img src="~/imgs/logonova.png" alt="Logo informe tq" />
                    </div>
                    <div class="col-md-6" id="contact-form">
                        <form action="" method="post">
                            <input type="email" class="form-control" placeholder="E-mail" name="email">
                            <input type="text" class="form-control" placeholder="Assunto" name="subject">
                            <textarea class="form-control" rows="3" placeholder="Sua mensagem..." name="message"></textarea>
                            <input type="submit" class="btn btn-outline-danger btn-lg" value="Enviar">
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <br />

        <div id="copy-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p>Desenvolvido por <a href="" target="_blank">Allan Devincola & Julia Nogueira</a> &copy; 2022</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
