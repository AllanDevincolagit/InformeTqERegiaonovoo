@model InformeTqERegiao.Entidades.Permissoes
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Edit";
}



<h4 class="text-center" style="color:#dc3545;">Editar Permissões</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" style="background-color:#f7f7f7; color:#dc3545; font-weight:bold; border-radius:5px; border-width:medium; border-style:solid; border-color:#dc3545; margin-top:5px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" style="margin-top:12px; margin-left:2px; margin-right:2px; border-radius:5px; border-color:#dc3545; " />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" class="form-control" style="margin-top:12px; margin-left:2px; margin-right:2px; border-radius:5px; border-color:#dc3545; " />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Salvar" class="btn btn-outline-danger btn-sm" style="margin-top:5px; margin-bottom:5px;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">De volta a lista</a>
</div>


