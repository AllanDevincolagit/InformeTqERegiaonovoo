@model InformeTqERegiao.Entidades.Usuarios
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Create";
}

<h4 class="text-center" style="color: #dc3545;">Criar Usuario</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" style="background-color:#f7f7f7; color:#dc3545; font-weight:bold; border-radius:5px; border-width:medium; border-style:solid; border-color:#dc3545; margin-top:5px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
                <label asp-for="Email" class="control-label text-center"></label>
                <input asp-for="Email" class="form-control" style="margin-top:12px; border-radius:5px; border-color:#dc3545; " />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="Senha" class="control-label text-center"></label>
                <input asp-for="Senha" class="form-control" style="margin-top:12px; border-radius:5px; border-color:#dc3545; " />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="Nome" class="control-label text-center"></label>
                <input asp-for="Nome" class="form-control" style="margin-top:12px; border-radius:5px; border-color:#dc3545; " />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="Sobrenome" class="control-label text-center"></label>
                <input asp-for="Sobrenome" class="form-control" style="margin-top:12px; border-radius:5px; border-color:#dc3545; " />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="CPF" class="control-label text-center"></label>
                <input asp-for="CPF" class="form-control" style="margin-top:12px; border-radius:5px; border-color:#dc3545; " />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group text-center">
                <input type="submit" value="Registrar" class="btn btn-outline-danger btn-md" style="text-align:center;" />
            </div>
        </form>
    </div>
</div>



