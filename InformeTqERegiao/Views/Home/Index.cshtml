@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>

        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="InformeTq Região Companhy" />
        <meta name="keywords" content="ITQ Região " />
        <meta name="author" content="Alan Devincola, Julia " />
       

        <title>@ViewData["Title"] - Inicio</title>
       
</head>
<body>

    <div class="text-center my-5">

        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">

            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="4" aria-label="Slide 3"></button>
            </div>

            <div class="carousel-inner">

                <div class="carousel-item active">

                    <img src="/imgs/SLIDE1.png" class="d-block w-75 mx-auto" alt="Primeiro slide do carrosel" style="height:350px;">
                    <div class="carousel-caption d-none d-md-block text-black">
                        <h5>Encontre estabelecimentos</h5>
                        <p>Site dedicado a anunciar os estabelecimentos de nossa cidade</p>

                    </div>

                </div>

                <div class="carousel-item">

                    <img src="/imgs/SLIDE2.png" class="d-block w-75 mx-auto" alt="..." style="height:350px; object-fit:cover">

                    <div class="carousel-caption d-none d-md-block text-black">
                        <h5>Inscreva-se em um evento</h5>
                        <p>Participe de palestras que combinam com você.</p>
                    </div>

                </div>

                <div class="carousel-item">
                    <img src="/imgs/SLIDE3.png" class="d-block w-75 mx-auto" alt="..." style="height:350px; object-fit:cover">

                    <div class="carousel-caption d-none d-md-block text-black">
                        <h5>Faça novas conexões</h5>
                        <p>Conheça pessoas interessadas nos assuntos em que você é craque !</p>
                    </div>
                </div>

                <div class="carousel-item">

                    <img src="/imgs//SLIDE4.png" class="d-block w-75 mx-auto" alt="..." style="height:350px; object-fit:cover;">

                    <div class="carousel-caption d-none d-md-block text-black">
                        <h5>Busque novas inspirações</h5>
                        <p>Encontre o conteúdo necessário para alavancar suas ideias</p>
                    </div>
                </div>

                <div class="carousel-item">

                    <img src="/imgs/bannerCinco.jpg" class="d-block w-75 mx-auto" alt="..." style="height:350px; object-fit:cover;">

                    <div class="carousel-caption d-none d-md-block text-black">
                        <h5>Inspire a outros</h5>
                        <p>Ajude a construir uma comunidade unida e inclusiva</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <main class="cards">
            <section>
                <div class="containercard" style="text-align:center;">
                    <div class="card d-inline-block" style="width: 14rem;">
                        <img src="/imgs/farmacia.png" class="card-img-top" alt="Card de Saúde">
                        <div class="card-body">
                            <h5 class="card-title">Saúde</h5>
                            <p class="card-text">Confira os hospitais e farmácias da cidade! </p>
                            <a href="../Cards/Saude" class="btn btn-outline-danger btn-lg">Conferir</a>
                        </div> 
                    </div>

                    <div class="card d-inline-block" style="width: 14rem;">
                        <img src="/imgs/comida.png" class="card-img-top" alt="Card de Compras">
                        <div class="card-body">
                            <h5 class="card-title">Compras</h5>
                            <p class="card-text">Confira as opções de compras no comércio!</p>
                            <a href="../Cards/Compras" class="btn btn-outline-danger btn-lg">Conferir</a>
                        </div>
                    </div>

                    <div class="card d-inline-block" style="width: 14rem;">
                        <img src="/imgs/diversao.png" class="card-img-top" alt="Card de Lazer">
                        <div class="card-body">
                            <h5 class="card-title">Lazer</h5>
                            <p class="card-text">Confira as opções de lazer na cidade!</p>
                            <a href="../Cards/Lazer" class="btn btn-outline-danger btn-lg">Conferir</a>
                        </div>
                    </div>

                    <div class="card d-inline-block" style="width: 14rem;">
                        <img src="/imgs/serviços.png" class="card-img-top" alt="Card de Serviços">
                        <div class="card-body">
                            <h5 class="card-title">Serviços</h5>
                            <p class="card-text">Confira as opções de serviços na cidade!</p>
                            <a href="../Cards/Servicos" class="btn btn-outline-danger btn-lg">Conferir</a>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <br />
        <br />

